<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@android:color/background_light">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:id="@+id/view_event">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:id="@+id/imageView14"
                android:src="@drawable/flaticon_photos"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_event"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:layout_centerInParent="true" />

        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="เรื่องการแจ้งเตือน"
                android:id="@+id/pill_name"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/colorPrimary"
                android:layout_marginLeft="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_weight="1.5"
                android:freezesText="true"
                android:ellipsize="end"
                android:singleLine="true"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:text="สถานที่"
                android:id="@+id/txt_location"
                android:layout_below="@+id/pill_name"
                android:layout_alignStart="@+id/pill_name"
                android:textSize="@dimen/text_size_small"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:freezesText="true"
                android:ellipsize="end"
                android:singleLine="true"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="bottom"
                android:layout_weight="1">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="11 พ.ย 2015"
                    android:id="@+id/txtDay"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_weight="2"
                    android:textSize="@dimen/text_size_small"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/colorPrimary" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="18:00"
                    android:id="@+id/txt_time"
                    android:textSize="@dimen/text_size_small"
                    android:layout_alignParentTop="false"
                    android:layout_alignParentLeft="false"
                    android:layout_centerHorizontal="true"
                    android:gravity="clip_horizontal"
                    android:layout_weight="1"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="0.2dp"
        android:background="@android:color/darker_gray"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"></FrameLayout>


</LinearLayout>